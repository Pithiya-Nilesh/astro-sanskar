---
import Layout from "../layouts/Layout.astro";
import "../styles.css";
import { Image, Picture } from "@astrojs/image/components";

import caledar from "../../public/Images/caledar.svg";
import twitter_event from "../../public/Images/twitter_event.svg";
import linkedin_event from "../../public/Images/linkedin_event.svg";
import Frappe_Local_2024 from "../../public/Images/Frappe_Local_2024.png";
import Republic_Day_Celebration from "../../public/Images/Republic_Day_Celebration.png";
import Welcome_Rushabh_Mehta from "../../public/Images/Welcome_Rushabh_Mehta.png";
import Republic_Day_Celebration_banner from "../../public/Images/Republic_Day_Celebration_banner.png";
import Republic_Day_Celebration_1 from "../../public/Images/Republic_Day_Celebration_1.png";
import Republic_Day_Celebration_2 from "../../public/Images/Republic_Day_Celebration_2.png";
import Republic_Day_Celebration_3 from "../../public/Images/Republic_Day_Celebration_3.png";
import Explore_now from "../../public/Images/Explore_now.svg";
import right from "../../public/Images/right.svg";
import Frappeverse_2024 from "../../public/Images/Frappeverse_2024.png";
---

<Layout title="" , keyword="" , description="" , canonical_href="">
  <!-- Explore Our Events Start -->
  <section class="lg:flex section-bg items-center banner-bg">
    <div
      class="flex items-center md:max-w-7xl md:mx-auto p-5 sm:p-10 md:p-24 2xl:px-0 relative"
    >
      <div
        class="flex lg:flex-row flex-col items-center gap-5 lg:gap-10 2xl:gap-20"
      >
        <div class="lg:basis-[50%] flex flex-col justify-center">
          <p
            class="mt-3 md:mt-5 text-[#3E96F4] text-sm md:text-base font-semibold"
          >
            Events <span class="text-[#99A8B5]">/</span>
          </p>
          <h1
            class="text-[1.75rem] md:text-[3rem] leading-9 md:leading-[3.5rem] text-[#31393C] font-bold"
          >
          Republic Day Celebration
          </h1>
          
        </div>
        <Image
          loading="eager"
          src={Republic_Day_Celebration_banner}
          alt="Welcome Rushabh Mehta  "
       
        />
      </div>
    </div>
  </section>
  <!-- Explore Our Events End-->



  <!--The annual gathering of Frappe faithful from around the globe Start  -->

  <section>
    <div class="mx-5 md:max-w-6xl md:mx-auto md:px-24 lg:px-40 2xl:px-48 pt-[2rem] md:pt-[2rem] lg:pt-[4rem]">
        <div class="flex gap-2">
            <Image src={caledar}></Image>
            <p class="text-sm">25 January, 2024</p>
        </div>
        <h2 class="text-2xl md:text-3xl lg:text-4xl text-[#3E96F4] font-bold mt-2 lg:mt-4">
            Our Republic Day Celebration Just Got Better!
        </h2>
        <p class="font-semibold text-sm md:text-base lg:text-lg  mt-2 text-[#31393C]  ">
            We are thrilled to have hosted a spectacular Republic Day Celebration at Sanskar Technolab, where we were honored to welcome the incredible ERPNext team!

        </p>
        <p class="text-sm md:text-base mt-2 text-[#31393C]">
            The day was filled with patriotic fervor and a deep dive into the world of ERPNext during an insightful general meeting. We have explored the ERPNext features, and industry trends, and got a firsthand look at the expertise that powers this exceptional platform.
        </p>
        <p class="text-sm md:text-base mt-2 text-[#31393C]">
            Big thanks to the ERPNext team for joining us. Looking forward to implementing these invaluable insights.
        </p>
        <h4 class="font-semibold text-sm md:text-base lg:text-lg mt-5 lg:mt-10 text-[#31393C]">
            Event Gallery:
          </h4>
    </div>
        

        <div class="flex flex-row gap-10 items-center mx-5 md:max-w-[79rem] md:mx-auto md:px-24 2xl:px-0 mt-4 lg:mt-8">
            <Image loading="eager" src={Republic_Day_Celebration_1} alt="Exciting Day" />
            <div class="flex flex-col gap-5 items-center">
              <Image loading="eager" src={Republic_Day_Celebration_2} alt="Exciting Day" />
              <Image loading="eager" src={Republic_Day_Celebration_3} alt="Exciting Day" />
            </div>
          </div>


          <div
          class="mx-5 md:max-w-6xl md:mx-auto md:px-24 lg:px-40 2xl:px-48 pb-[2rem] md:pb-[2rem] lg:pb-[4rem] mt-5 lg:mt-10"
        >
          <h3 class="text-[#31393C] text-sm md:text-base lg:text-lg  font-semibold mt-2 lg:mt-4 ">
            Stay Connected:
           </h3>
           <p class="text-sm md:text-base mt-2">
            We look forward to continuing our journey of innovation and excellence with you. Stay tuned for more exciting events and updates!
           </p>

      
    
        <div class="flex flex-col sm:flex-row mt-4 lg:mt-6 gap-7 text-[#31393C]">
            <div class=" flex flex-row gap-3">
              <a class="text-sm md:text-base underline" href="#"
              > <Image src={twitter_event} alt="Twitter" /></a>
                <a class="text-sm md:text-base underline" href="#">Follow us on Twitter</a>
            </div>
    
            <div class="flex flex-row gap-3">
         
              <a class="text-sm md:text-base underline" href="https://in.linkedin.com/company/sanskar-technolab-pvt-ltd"> <Image src={linkedin_event} alt="LinkedIn"></Image></a>    
              <a class="text-sm md:text-base underline" href="https://in.linkedin.com/company/sanskar-technolab-pvt-ltd">Connect with us on LinkedIn</a>          
          </div>
        </div>
      
    </div>
      </section>
    <!--The annual gathering of Frappe faithful from around the globe End  -->


      <!-- Explore more Events Start -->
   <section
   class=" bg-gradient-to-b from-[#cee4fc] to-[#FFFF] "
 >
 <div class="mx-5 md:max-w-7xl md:mx-auto md:px-24 2xl:px-0 py-[2rem] md:py-[2rem] lg:pt-[4rem] lg:pb-[8rem]">

     <h2
           class="text-[#3E96F4] text-center font-semibold text-2xl md:text-4xl "
         >
         Explore more Events
         </h2>
    <div
      class="mt-8 lg:mx-0 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5"
      id="events_container"
    >
    
 
    <div class="border shadow-lg h-full event-card all upcoming">
        <div class="relative">
          <Image
            loading="eager"
            src={Frappeverse_2024}
            alt="Frappeverse 2024"
            class="w-full"
          />
          <button
            class="p-2 bg-[#3E96F4] text-white text-xs md:text-sm lg:text-base font-semibold rounded-lg absolute bottom-[16px] left-[16px]"
          >
            Upcoming
          </button>
          <div
            class="p-2 lg:min-w-[60px] text-[#31393C] xl:min-w-[84px] bg-white text-[#331393C] text-center flex flex-col text-xs md:text-sm lg:text-base font-semibold rounded-lg absolute bottom-[16px] right-[16px]"
          >
            <span class="text-lg md:text-xl lg:text-2xl font-bold">3-4</span>
            <span class="text-sm font-semibold">OCT</span>
            <span class="text-sm font-semibold">2024</span>
          </div>
        </div>
        <div class="p-5 text-[#31393C]">
          <div class="xl:min-h-[140px] lg:min-h-[200px] md:min-h-[160px] 2xl:min-h-[120px]">
            <h3 class="font-semibold text-base md:text-lg lg:text-xl mb-2">
              Frappeverse 2024
            </h3>
            <p class="text-sm md:text-sm lg:text-base">
              We are excited to announce that we will be exhibiting at Frappe
              Verse 2024 as Gold Sponsors.
            </p>
          </div>
          <a
            href="/event-frappeverse"
            class="flex justify-between rounded-lg px-3 md:px-3 lg:px-5 py-2 md:py-2 border-[1px] border-[#B7BAB2] max-w-[160px] mt-5"
          >
            <span class="text-[#3E96F4] font-semibold font-inter"
              >Explore Now</span
            >
            <Image loading="eager" src={Explore_now} alt="right arrow" />
          </a>
        </div>
      </div>
 
      <div class="border shadow-lg h-full event-card all completed">
        <div class="relative">
          <Image
            loading="eager"
            src={Welcome_Rushabh_Mehta}
            alt="Welcome Rushabh Mehta, the visionary behind Frappe"
            class="w-full"
          />
          <button
            class="p-2 bg-[#3E96F4] text-white text-xs md:text-sm lg:text-base font-semibold rounded-lg absolute bottom-[16px] left-[16px]"
          >
            Completed
          </button>
          <div
            class="p-2 lg:min-w-[60px] text-[#31393C] xl:min-w-[84px] bg-white text-[#331393C] text-center flex flex-col text-xs md:text-sm lg:text-base font-semibold rounded-lg absolute bottom-[16px] right-[16px]"
          >
            <span class="text-lg md:text-xl lg:text-2xl font-bold">5</span>
            <span class="text-sm font-semibold">JULY</span>
            <span class="text-sm font-semibold">2024</span>
          </div>
        </div>
        <div class="p-5 text-[#31393C]">
          <div class="xl:min-h-[140px] lg:min-h-[200px] md:min-h-[160px] 2xl:min-h-[120px]">
            <h3 class="font-semibold text-base md:text-lg lg:text-xl mb-2">
              Welcome Rushabh Mehta, the visionary behind Frappe
            </h3>
            <p class="text-sm md:text-sm lg:text-base">
              We were thrilled to welcome Rushabh Mehta, the visionary behind
              Frappe & ERPNext, to our office.
            </p>
          </div>
          <a
            href="/event-rushabh-mehta"
            class="flex justify-between rounded-lg px-3 md:px-3 lg:px-5 py-2 md:py-2 border-[1px] border-[#B7BAB2] max-w-[160px] mt-5"
          >
            <span class="text-[#3E96F4] font-semibold font-inter"
              >Explore Now</span
            >
            <Image loading="eager" src={Explore_now} alt="right arrow" />
          </a>
        </div>
      </div>

      <div class="border shadow-lg h-full event-card all completed">
        <div class="relative">
          <Image
            loading="eager"
            src={Republic_Day_Celebration}
            alt="Republic Day Celebration"
            class="w-full"
          />
          <button
            class="p-2 bg-[#3E96F4] text-white text-xs md:text-sm lg:text-base font-semibold rounded-lg absolute bottom-[16px] left-[16px]"
          >
            Completed
          </button>

          <div
            class="p-2 lg:min-w-[60px] text-[#31393C] xl:min-w-[84px] bg-white text-[#331393C] text-center flex flex-col text-xs md:text-sm lg:text-base font-semibold rounded-lg absolute bottom-[16px] right-[16px]"
          >
            <span class="text-lg md:text-xl lg:text-2xl font-bold">5</span>
            <span class="text-sm font-semibold">JULY</span>
            <span class="text-sm font-semibold">2024</span>
          </div>
        </div>

        <div class="p-5 text-[#31393C]">
          <div class="xl:min-h-[140px] lg:min-h-[200px] md:min-h-[160px] 2xl:min-h-[120px]">
            <h3 class="font-semibold text-base md:text-lg lg:text-xl mb-2">
              Republic Day Celebration
            </h3>
            <p class="text-sm md:text-sm lg:text-base">
              We are thrilled to have hosted a spectacular Republic Day
              Celebration at Sanskar Technolab, where we were honored to welcome
              the incredible ERPNext team!
            </p>
          </div>
          <a
            href="/event-republic-day"
            class="flex justify-between rounded-lg px-3 md:px-3 lg:px-5 py-2 md:py-2 border-[1px] border-[#B7BAB2] max-w-[160px] mt-5"
          >
            <span class="text-[#3E96F4] font-semibold font-inter"
              >Explore Now</span
            >
            <Image loading="eager" src={Explore_now} alt="right arrow" />
          </a>
        </div>
      </div>
      
    </div>
 </div>
 </section>
 <!-- Explore more Events  End -->
    
</Layout>

<style>
    @media (max-width: 360px) {
      .logo {
        display: flex;
        flex-direction: column !important;
        align-items: baseline !important;
      }
    }
</style>
