<script>

const sliderContainer = document.querySelector('.slider-container');
    const images = document.querySelectorAll('.slider-container img');
    const dots = document.querySelectorAll('.dot');
    let index = 0;
    let slideInterval;

    // Function to update the slider
    function updateSlider() {
        sliderContainer.style.transform = `translateX(${-index * 100}%)`;
        dots.forEach((dot, i) => {
            dot.classList.toggle('active', i === index);
        });
    }

    // Function to automatically slide images
    function slideImages() {
        index++;
        if (index >= images.length) {
            index = 0;
        }
        updateSlider();
    }

    // Function to handle dot click
    function moveToSlide(slideIndex) {
        index = slideIndex;
        updateSlider();
    }

    // Adding event listeners to dots for manual slide movement
    dots.forEach((dot, i) => {
        dot.addEventListener('click', () => moveToSlide(i));
    });

    // Start the slider interval to auto slide images every 3 seconds
    function startSlider() {
        slideInterval = setInterval(slideImages, 3000);
    }

    // Start the auto slider initially
    startSlider();




