            src="https://www.youtube.com/embed/s6zISBBRSQg"
            title="YouTube Video"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen></iframe>
          <div class="md:flex md:mt-8 mt-4">
            <div>
              <Image
                loading="eager"
                src={eric_kimberlerg}
                alt="eric_kimberlerg"
                class="banner-image"
              />
