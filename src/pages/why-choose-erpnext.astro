      <div class="md:text-center sm:text-left mb-0 md:mb-5">
        <h2
          class="text-2xl md:text-3xl lg:text-4xl lg:text-[2.25rem] !leading-[1.75rem] md:!leading-[2.5rem] lg:!leading-[2.75rem] text-[#3E96F4] font-bold"
