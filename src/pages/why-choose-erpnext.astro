      <div class="flex justify-center">
        <Image
          loading="eager"
          class="mt-4 md:mt-6 lg:mt-10 mx-auto"
          src={agile_ERP}
          alt="agile_ERP"
        />
      </div>
    </div>

    <!-- Why Choose ERPNext instead of other ERPs? -->
    
    <section class="py-[2rem] md:py-[2rem] lg:py-[4rem] md:pt-[3rem] lg:pt-[7rem]">
