---
import Layout from "../layouts/Layout.astro";
import "../styles.css";
import { Image, Picture } from "@astrojs/image/components";

import right_arrow from "../../public/Images/right-arrow.svg";
import Explore_Our_Events from "../../public/Images/Explore_Our_Events.png";
import Republic_Day_Celebration from "../../public/Images/Republic_Day_Celebration.png";
import Welcome_Rushabh_Mehta from "../../public/Images/Welcome_Rushabh_Mehta.png";
import Frappe_Local_2024 from "../../public/Images/Frappe_Local_2024.png";
import Explore_now from "../../public/Images/Explore_now.svg";
import Frappeverse_2024 from "../../public/Images/Frappeverse_2024.png";
---

<Layout title="" , keyword="" , description="" , canonical_href="">
  <!-- Explore Our Events Start -->
  <section class="lg:flex section-bg items-center banner-bg">
    <div
      class="flex items-center md:max-w-7xl md:mx-auto p-5 sm:p-10 md:p-24 2xl:px-0 relative"
    >
      <div
        class="flex lg:flex-row flex-col items-center gap-5 lg:gap-10 2xl:gap-20"
      >
        <div class="lg:basis-[50%] flex flex-col justify-center">
          <h1
            class="text-[1.75rem] md:text-[3rem] leading-9 md:leading-[3.5rem] text-[#31393C] font-semibold"
          >
            Explore Our Events
          </h1>
          <p
            class="mt-3 md:mt-5 text-[#31393C] text-sm md:text-base lg:text-lg leading-5 md:leading-6"
          >
            Welcome to the hub of all our events and announcements at Sanskar
            Technolab. Here, you can stay up-to-date with our upcoming
            conferences, webinars, and workshops designed to provide you with
            the latest insights and innovations in enterprise technology.
          </p>
        </div>
        <Image
          loading="eager"
          src={Explore_Our_Events}
          alt="Explore Our Events "
        />
      </div>
    </div>
  </section>
  <!-- Explore Our Events End-->

  <!-- Glimpse of Events Start -->
  <section
    class="mx-5 md:max-w-7xl md:mx-auto md:px-24 2xl:px-0 py-[2rem] md:py-[2rem] lg:pt-[4rem] lg:pb-[8rem]"
  >
    <div class="flex">
      <div class="inline-flex bg-blue-200 rounded-lg">
        <button class="pl-2 py-2 rounded-l-lg font-semibold" id="all_event">
          <h2
            class="py-2 sm:px-3 px-2 bg-blue-500 text-white rounded-lg text-sm md:text-base"
          >
            All
          </h2>
        </button>
        <button class="py-2 text-[#31393C] font-semibold" id="upcoming_event">
          <h2
            class="py-2 sm:px-3 px-2 text-[#31393C] rounded-lg text-sm md:text-base"
          >
            Upcoming
          </h2>
        </button>
        <button
          class="py-2 pr-2 rounded-r-lg font-semibold"
          id="completed_event"
        >
          <h2
            class="py-2 sm:px-3 px-2 text-[#31393C] rounded-lg text-sm md:text-base"
          >
            Completed
          </h2>
        </button>
      </div>
    </div>


    <div
      class="mt-8 lg:mx-0 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5"
      id="events_container"
    >
      <div class="border shadow-lg h-full event-card all upcoming">
        <div class="relative">
          <Image
            loading="eager"
            src={Frappeverse_2024}
            alt="Frappeverse 2024"
            class="w-full"
          />
          <button
            class="p-2 bg-[#3E96F4] text-white text-xs md:text-sm lg:text-base font-semibold rounded-lg absolute bottom-[16px] left-[16px]"
          >
            Upcoming
          </button>
          <div
            class="p-2 text-[#31393C] lg:min-w-[60px] xl:min-w-[84px] bg-white text-[#331393C] text-center flex flex-col text-xs md:text-sm lg:text-base font-semibold rounded-lg absolute bottom-[16px] right-[16px]"
          >
            <span class="text-lg md:text-xl lg:text-2xl font-bold">3-4</span>
            <span class="text-sm font-semibold">OCT</span>
            <span class="text-sm font-semibold">2024</span>
          </div>
        </div>
        <div class="p-5 text-[#31393C]">
          <div class="xl:min-h-[140px] lg:min-h-[200px] md:min-h-[160px] 2xl:min-h-[120px]">
            <h3 class="font-semibold text-base md:text-lg lg:text-xl mb-2">
              Frappeverse 2024
            </h3>
            <p class="text-sm md:text-sm lg:text-base">
              We are excited to announce that we will be exhibiting at Frappe
              Verse 2024 as Gold Sponsors.
            </p>
          </div>
          <a
            href="/event-frappeverse"
            class="flex justify-between rounded-lg px-3 md:px-3 lg:px-5 py-2 md:py-2 border-[1px] border-[#B7BAB2] max-w-[160px] mt-5"
          >
            <span class="text-[#3E96F4] font-semibold font-inter"
              >Explore Now</span
            >
            <Image loading="eager" src={Explore_now} alt="right arrow" />
          </a>
        </div>
      </div>

      <div class="border shadow-lg h-full event-card all completed">
        <div class="relative">
          <Image
            loading="eager"
            src={Frappe_Local_2024}
            alt="Frappe Local - Ahmedabad 2024!"
            class="w-full"
          />
          <button
            class="p-2 bg-[#3E96F4] text-white text-xs md:text-sm lg:text-base font-semibold rounded-lg absolute bottom-[16px] left-[16px]"
          >
            Completed
          </button>
          <div
            class="p-2 lg:min-w-[60px] text-[#31393C] xl:min-w-[84px] bg-white text-[#331393C] text-center flex flex-col text-xs md:text-sm lg:text-base font-semibold rounded-lg absolute bottom-[16px] right-[16px]"
          >
            <span class="text-lg md:text-xl lg:text-2xl font-bold">6</span>
            <span class="text-sm font-semibold">JULY</span>
            <span class="text-sm font-semibold">2024</span>
          </div>
        </div>

        <div class="p-5 text-[#31393C]">
          <div class="xl:min-h-[140px] lg:min-h-[200px] md:min-h-[160px] 2xl:min-h-[120px]">
            <h3 class="font-semibold text-base md:text-lg lg:text-xl mb-2">
              Frappe Local - Ahmedabad 2024!
            </h3>
            <p class="text-sm md:text-sm lg:text-base">
              We at Sanskar Technolab Pvt. Ltd. are thrilled to have hosted the
              Frappe Local event in Ahmedabad this year.  
            </p>
          </div>
          <a
            href="/event-frappe-local"
            class="flex justify-between rounded-lg px-3 md:px-3 lg:px-5 py-2 md:py-2 border-[1px] border-[#B7BAB2] max-w-[160px] mt-5"
          >
            <span class="text-[#3E96F4] font-semibold font-inter"
              >Explore Now</span
            >
            <Image loading="eager" src={Explore_now} alt="right arrow" />
          </a>
        </div>
      </div>

      <div class="border shadow-lg h-full event-card all completed">
        <div class="relative">
          <Image
            loading="eager"
            src={Welcome_Rushabh_Mehta}
            alt="Welcome Rushabh Mehta, the visionary behind Frappe"
            class="w-full"
          />
          <button
            class="p-2 bg-[#3E96F4] text-white text-xs md:text-sm lg:text-base font-semibold rounded-lg absolute bottom-[16px] left-[16px]"
          >
            Completed
          </button>
          <div
            class="p-2 lg:min-w-[60px] text-[#31393C] xl:min-w-[84px] bg-white text-[#331393C] text-center flex flex-col text-xs md:text-sm lg:text-base font-semibold rounded-lg absolute bottom-[16px] right-[16px]"
          >
            <span class="text-lg md:text-xl lg:text-2xl font-bold">5</span>
            <span class="text-sm font-semibold">JULY</span>
            <span class="text-sm font-semibold">2024</span>
          </div>
        </div>
        <div class="p-5 text-[#31393C]">
          <div class="xl:min-h-[140px] lg:min-h-[200px] md:min-h-[160px] 2xl:min-h-[120px]">
            <h3 class="font-semibold text-base md:text-lg lg:text-xl mb-2">
              Welcome Rushabh Mehta, the visionary behind Frappe
            </h3>
            <p class="text-sm md:text-sm lg:text-base">
              We were thrilled to welcome Rushabh Mehta, the visionary behind
              Frappe & ERPNext, to our office.
            </p>
          </div>
          <a
            href="/event-rushabh-mehta"
            class="flex justify-between rounded-lg px-3 md:px-3 lg:px-5 py-2 md:py-2 border-[1px] border-[#B7BAB2] max-w-[160px] mt-5"
          >
            <span class="text-[#3E96F4] font-semibold font-inter"
              >Explore Now</span
            >
            <Image loading="eager" src={Explore_now} alt="right arrow" />
          </a>
        </div>
      </div>
      <div class="border shadow-lg h-full event-card all completed">
        <div class="relative">
          <Image
            loading="eager"
            src={Republic_Day_Celebration}
            alt="Republic Day Celebration"
            class="w-full"
          />
          <button
            class="p-2 bg-[#3E96F4] text-white text-xs md:text-sm lg:text-base font-semibold rounded-lg absolute bottom-[16px] left-[16px]"
          >
            Completed
          </button>

          <div
            class="p-2 text-[#31393C] lg:min-w-[60px] xl:min-w-[84px] bg-white text-[#331393C] text-center flex flex-col text-xs md:text-sm lg:text-base font-semibold rounded-lg absolute bottom-[16px] right-[16px]"
          >
            <span class="text-lg md:text-xl lg:text-2xl font-bold">5</span>
            <span class="text-sm font-semibold">JULY</span>
            <span class="text-sm font-semibold">2024</span>
          </div>
        </div>

        <div class="p-5 text-[#31393C]">
          <div class="xl:min-h-[140px] lg:min-h-[200px] md:min-h-[160px] 2xl:min-h-[120px]">
            <h3 class="font-semibold text-base md:text-lg lg:text-xl mb-2">
              Republic Day Celebration
            </h3>
            <p class="text-sm md:text-sm lg:text-base">
              We are thrilled to have hosted a spectacular Republic Day
              Celebration at Sanskar Technolab, where we were honored to welcome
              the incredible ERPNext team!
            </p>
          </div>
          <a
            href="/event-republic-day"
            class="flex justify-between rounded-lg px-3 md:px-3 lg:px-5 py-2 md:py-2 border-[1px] border-[#B7BAB2] max-w-[160px] mt-5"
          >
            <span class="text-[#3E96F4] font-semibold font-inter"
              >Explore Now</span
            >
            <Image loading="eager" src={Explore_now} alt="right arrow" />
          </a>
        </div>
      </div>
    </div>
  </section>
  <!-- Glimpse of Events End -->
</Layout>

<script>
  function show_all_event() {
    console.log("All Events");
    setActiveButton("all_event");
    filterEvents("all");
  }

  function show_upcoming_event() {
    console.log("Upcoming Events");
    setActiveButton("upcoming_event");
    filterEvents("upcoming");
  }

  function show_completed_event() {
    console.log("Completed Events");
    setActiveButton("completed_event");
    filterEvents("completed");
  }

  function setActiveButton(activeButtonId) {
    const buttons = document.querySelectorAll(".inline-flex button h2");
    buttons.forEach((button) => {
      button.classList.remove("bg-blue-500", "text-white");
      button.classList.add("text-[#31393C]");
    });
    document
      .querySelector(`#${activeButtonId} h2`)
      .classList.add("bg-blue-500", "text-white");
  }

  function filterEvents(eventType) {
    const events = document.querySelectorAll(".event-card");
    events.forEach((event) => {
      if (event.classList.contains(eventType) || eventType === "all") {
        event.classList.remove("hidden");
      } else {
        event.classList.add("hidden");
      }
    });
  }

  document
    .getElementById("all_event")
    .addEventListener("click", show_all_event);
  document
    .getElementById("upcoming_event")
    .addEventListener("click", show_upcoming_event);
  document
    .getElementById("completed_event")
    .addEventListener("click", show_completed_event);

  // Initialize with all events visible
  show_all_event();
</script>
